{% block table_head %}
{% apply spaceless %}
<thead>
	<tr>
		{% for column in columns %}
		<th class="th-col-{{ loop.index}}" {{ column.headAttributes|format_attributes }}>
			{% if column.isSortable %}
        <a 
          href="{{ order_url(parameters.columnName, column.name, parameters.direction, currentDirection, currentColumnName, parameters.pagination) }}"
          class="{% if currentColumnName == column.name %}{{ currentDirection }}{% else %}sortable{% endif %}"
        >          
          {{ column.label|trans }}
        </a>
      {% elseif column.label|length > 0 %}
        {{ column.label|trans }}
			{% endif %}
		</th>
		{% endfor %}
	</tr>
</thead>
{% endapply %}
{% endblock %}
